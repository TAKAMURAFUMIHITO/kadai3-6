<main>
  <p id="notice"></p>
  <div class="container px-5 px-sm-0">
    <% if @book.errors.any? %>
      <h2><%= @book.errors.count %> error prohibited this obj from being saved:</h2>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
    <div class="row">
      <div class="col-md-3">

      <%= render 'users/list', user: @user %>

        <div class="row" >
          <% if @book.user == current_user %>
            <%= link_to edit_user_path(@user), class: 'btn btn-outline-secondary btn-block' do %>
              <i class="fas fa-user-cog fa-w-20"></i>
            <% end %>
          <% else %>
            <%= link_to user_path(current_user), class: 'btn btn-outline-secondary btn-block' do %>
              <i class="fas fa-user-cog fa-w-20"></i>
            <% end %>
          <% end %>
        </div>

        <h2 class="mt-3">New book</h2>
          <%= form_with model: @create do |f| %>
            <div class="form-group">
              <label for="book_title">Title</label>
              <%= f.text_field :title, class: "form-control book_title" %>
            </div>
            <div class="form-group">
              <label for="book_opinion">Opinion</label>
              <%= f.text_area :body, class: "form-control book_body" %>
            </div>
            <div class="form-group">
            <%= f.submit 'Create Book', class: "btn btn-success" %>
            </div>
          <% end %>

        <h2>Book detail</h2>
        <div class="col-md-8 offset-md-1">
          <table class="table">
            <tbody>
              <tr>
                <td>
                  <%= link_to user_path(@book.user) do %>
                    <%= image_tag @book.user.get_profile_image(100,100) %>
                  <% end %>
                </td>
                <td>
                  <%= link_to book_path(@book.id) do %>
                    <%= @book.title %>
                  <% end %>
                </td>
                <td>
                  <%= @book.body %>
                </td>
                <% if @book.user == current_user %>
                  <td>
                    <%= link_to edit_book_path(@book.id), class: "btn btn-sm btn-success" do %>
                      Edit
                    <% end %>
                  </td>
                  <td>
                    <%= link_to book_path(@book.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-sm btn-danger" do %>
                      Destroy
                    <% end %>
                  </td>
                <% end %>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</main>