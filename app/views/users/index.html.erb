<main>
  <p id="notice"></p>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">

        <%= render 'list', user: @user %>

        <div class="row">
          <% if @user == current_user %>
            <%= link_to edit_user_path(@user), class: 'btn btn-outline-secondary btn-block' do %>
              <i class="fas fa-user-cog fa-w-20"></i>
            <% end %>
          <% else %>
            <%= link_to user_path(current_user), class: 'btn btn-outline-secondary btn-block' do %>
              <i class="fas fa-user-cog fa-w-20"></i>
            <% end %>
          <% end %>
        </div>

        <h2 class="mt-3">New book</h2>
        <%= form_with model: @create do |f| %>
          <div class="form-group">
            <label for="book_title">Title</label>
            <%= f.text_field :title, class: "form-control book_title" %>
          </div>
          <div class="form-group">
            <label for="book_opinion">Opinion</label>
            <%= f.text_area :body, class: "form-control book_body" %>
          </div>
          <div class="form-group">
            <%= f.submit 'Create Book', class: "btn btn-success" %>
          </div>
        <% end %>

        <h2>Users</h2>
        <div class="col-md-8 offset-md-1">
          <table class="table table-hover table-inverse">
            <thead>
              <tr>
                <th>image</th>
                <th>name</th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>
              <% @users.each do |user| %>
                <tr>
                  <td><%= image_tag user.get_profile_image(100,100) %></td>
                  <td><%= user.name %></td>
                  <td>
                    <%= link_to user_path(user.id) do %>
                      show
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</main>